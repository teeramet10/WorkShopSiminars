<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:id="@+id/sign_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:elevation="10dp"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/sign_formuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Username"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/sign_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Username"
                android:lines="1"
                android:inputType="textPersonName"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sign_formpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_formuser">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Password"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/sign_pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Password"
                android:inputType="textPassword"
                android:lines="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sign_formconfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_formpass">

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Confirm Password"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/sign_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:lines="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sign_formemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_formconfirm">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="E-mail"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/sign_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="E-mail"
                android:lines="1"
                android:inputType="textEmailAddress"/>

        </LinearLayout>


        <Button
            android:id="@+id/signup_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_formemail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="2dp"
            android:text="Create Accout" />

    </RelativeLayout>

</RelativeLayout>
